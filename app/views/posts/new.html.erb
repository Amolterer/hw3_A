<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
   <p>
    <%= form.label "date" %>
    <%= form.date_field "date" %>
  </p>
  <!-- So we can transfer state from the previous action to the next -->
  <%= form.hidden_field "places_id" %>
  <%= form.submit %>
<% end %>